<?xml version="1.0" encoding="utf-8"?>
<!--<?xml version="1.0" encoding="utf-8"?>-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/id"
        android:layout_toRightOf="@id/id"
        android:gravity="center_horizontal"
        android:id="@+id/cancel"

        android:layout_width="fill_parent"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="fill_parent"
        android:paddingBottom="85dp"
        android:background="#FF0202"
        android:backgroundTint="#EF0606"
        android:text="cancel"
        android:textColor="#EDE9E9"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/imageurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
<!--        android:layout_marginStart="@dimen/activity_horizontal_margin"-->
<!--        android:layout_marginEnd="@dimen/activity_horizontal_margin"-->
<!--        android:contentDescription="Icon"/>-->


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/name"
        android:layout_toRightOf="@id/name"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/rating"
        android:layout_toRightOf="@id/rating"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/miles"
        android:layout_toRightOf="@id/miles"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/m_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollbars="horizontal"/>

    <!--        card_view:cardUseCopmatPadding="true" />-->
</RelativeLayout>